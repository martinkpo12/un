	<script type="text/javascript">
		$(function () {
/* 			$('#myCarousel').carousel({ interval: 1700, pause: 'hover' }) */
			
			var deleted = false;

			$('#delete').click( function () {
				$.ajax({
					url:	'/api/pais/<%= country.nombre%>',
					type:	'DELETE',
					success: function (data) {
						$('.modal-body').html(data);
						$('.modal-footer').html('<button class="btn" data-dismiss="modal" aria-hidden="true">OK</button>');
						deleted = true;
					}
				});
			});
			
			$('#myModal').on('hidden', function () {
				if (deleted) {
					window.location = '/paises';
				}
			});
			
			
			$('.rep').each( function(index) {
				text = $(this).text();
				$(this).html(text.replace(/[\r\n]+(?=[^\r\n])/g,'</p><p>'));
			});
			
			$("#send").click(function (e) {
				e.preventDefault();
				console.log("fsafs");
				$.ajax({
					url: '/api/pais/<%= country.nombre%>/addComment',
					type: 'POST',
					data: $('#comments').serialize(),
					success: function (data) {
						var text = $("[name='contenido']").val();
						$("[name='contenido']").val("");
						$('tbody > tr, tbody > blockquote').eq($('tbody > tr, tbody > blockquote').length - 2).after("<blockquote><strong class='pull-right'>Recien</strong><p>" + text + "</p><small>	Anonimo</small><hr style='border-width:3px;' /></blockquote>");
