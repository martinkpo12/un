	<script type="text/javascript">
		$(function () {
			/*	 	Carousel Sample		 */
/* 			$('#myCarousel').carousel({ interval: 1700, pause: 'hover' }); */
/* 			$('#myCarousel2').carousel({ interval: 2700}); */

			/*  File upload	 */
